<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prestamo">



    <TextView
        android:id="@+id/sp"
        android:layout_marginTop="@dimen/dimenmargintop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/solicitud_de_prestamo"
        android:textSize="@dimen/dimeTitulo"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginBottom="@dimen/dimenmargintop"/>

    <EditText
        android:layout_marginTop="@dimen/dimenmargintop"
        android:id="@+id/calen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_below="@+id/sp"
        android:hint="@string/fecha_salida"
        android:textColorHint="@android:color/black"/>

    <EditText
        android:layout_marginTop="@dimen/dimenmargintop"
        android:id="@+id/calen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_below="@+id/calen"
        android:hint="@string/fecha_devolucion"
        android:textColorHint="@android:color/black"/>

    <Spinner
        android:layout_marginTop="@dimen/dimenmargintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/calen1"
        ></Spinner>


    <Spinner
        android:layout_marginTop="@dimen/dimenmargintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerfi"
        android:layout_below="@+id/spinner"
        ></Spinner>


    <Spinner
        android:layout_marginTop="@dimen/dimenmargintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnermu"
        android:layout_below="@+id/spinnerfi"
        ></Spinner>


    <Spinner
        android:layout_marginTop="@dimen/dimenmargintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerres"
        android:layout_below="@+id/spinnermu"
        ></Spinner>

    <EditText
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerres"
        android:hint="Observaciones"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"/>



    <Button
        android:id="@+id/btnAceptarP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:text="@string/aceptar"
        android:background="@drawable/redondo"/>

</RelativeLayout>